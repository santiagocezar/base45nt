{
  "include": [
    "./src"
  ],
  "exclude": [
    "./src/tests"
  ],
  "compilerOptions": {
    "target": "es2016",
    "module": "es2015",
    "rootDir": "./src",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "declaration": true,
    "outDir": "lib/esm",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}